if (width > 768) {
  window._hmt && window._hmt.push(['_trackEvent', '入口统计','pc端']);
  var height = $(window).height();
  $(window).scroll(function() {
    var top = $(window).scrollTop();
    if (top > height) {
      $(".pc-return").show();
    } else {
      $(".pc-return").hide();
    }
  });
  $("body").on("click", ".pc-return", function() {
    $('body,html').animate({
      scrollTop: 0
    }, 300);
  });
} else {
