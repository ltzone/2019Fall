      $('.m-pic-slick').slick('slickPrev');
    });
    $('.m-pic-right-arrow').click(function(){
      $('.m-pic-slick').slick('slickNext');
    });

    $('.bd-content-slick ').hover(function(){
      $('.pic-arrow').show();
    },function(){
      $('.pic-arrow').hide();
    });
</script>

</html>