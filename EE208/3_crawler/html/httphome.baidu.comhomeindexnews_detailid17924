$('.pic-slick').slick({
      dots: false,
      infinite: true,
      speed: 300,
      slidesToShow: 1,
      asNavFor: '.pic-slick-nav'
      // autoplay: true,
      // autoplaySpeed: 2000,
    });
  $('.pic-slick-nav').slick({
      dots: false,
      infinite: true,
      speed: 300,
      slidesToShow: 1,
      asNavFor: '.pic-slick'
      // autoplay: true,
      // autoplaySpeed: 2000,
    });


    $('.pic-left-arrow').click(function(){
      $('.pic-slick').slick('slickPrev');
    });
    $('.pic-right-arrow').click(function(){
      $('.pic-slick').slick('slickNext');
    });

    // 移动端
    $('.m-pic-slick').slick({
      dots: false,
      infinite: true,
      speed: 300,
      slidesToShow: 1,
      asNavFor: '.m-pic-slick-nav'
      // autoplay: true,
      // autoplaySpeed: 2000,
    });
    $('.m-pic-slick-nav').slick({
      dots: false,
      infinite: true,
      speed: 300,
      slidesToShow: 1,
      asNavFor: '.m-pic-slick'
      // autoplay: true,
      // autoplaySpeed: 2000,
    });

    $('.m-pic-left-arrow').click(function(){
      $('.m-pic-slick').slick('slickPrev');
    });
    $('.m-pic-right-arrow').click(function(){
      $('.m-pic-slick').slick('slickNext');
    });

    $('.bd-content-slick ').hover(function(){
      $('.pic-arrow').show();
    },function(){
      $('.pic-arrow').hide();
    });
</script>

